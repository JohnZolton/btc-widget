<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Top row: Bitcoin logo, price, and refresh button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Bitcoin logo -->
        <ImageView
            android:id="@+id/btc_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bitcoin"
            android:contentDescription="Bitcoin logo" />

    <!-- Bitcoin price -->
    <TextView
        android:id="@+id/btc_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="$0.00"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:ellipsize="end" />

        <!-- Refresh button -->
        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh data" />
    </LinearLayout>

    <!-- Bottom row: Comparison data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/btc_to_gold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 BTC = 0.00 Gold oz"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btc_to_sp500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btc_to_sp500"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/btc_to_house"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 BTC = 0.00 Median homes"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
